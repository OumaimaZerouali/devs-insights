<script>
  var posts = [
    {% for post in site.posts %}
    {
      "title": "{{ post.title }}",
      "url": "{{ post.url }}",
      "content": "{{ post.content | strip_html | truncate: 150 }}",  // Truncate content to make it smaller for indexing
      "date": "{{ post.date | date: '%Y-%m-%d' }}"
    }{% if forloop.last == false %},{% endif %}
    {% endfor %}
  ];
</script>
